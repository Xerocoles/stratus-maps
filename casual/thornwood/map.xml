<map proto="1.4.0">
<name>Thornwood</name>
<version>1.0.2</version>
<objective>Capture the enemy's two wools!</objective>
<authors>
    <author uuid="0c44ca5a-6a42-49b7-81f2-58dc6d2ae3e9"/> <!-- Xerocoles -->
</authors>
<teams>
    <team id="blue" color="blue" max="26">Blue</team>
    <team id="red" color="dark red" max="26">Red</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="iron sword"/>
        <item slot="1" unbreakable="true" material="bow">
            <enchantment>infinity</enchantment>
        </item>
        <item slot="28" material="arrow"/>
        <item slot="2" unbreakable="true" material="iron pickaxe">
            <enchantment>efficiency</enchantment>
        </item>
        <item slot="3" unbreakable="true" material="iron axe">
            <enchantment>efficiency</enchantment>
        </item>
        <item slot="31" unbreakable="true" material="iron spade">
            <enchantment>efficiency</enchantment>
        </item>
        <item slot="4" amount="48" damage="1" material="wood"/>
        <item slot="5" amount="32" material="glass"/>
        <item slot="7" material="golden apple"/>
        <item slot="8" amount="64" material="golden carrot"/>
        <leggings unbreakable="true" material="chainmail leggings"/>
        <effect duration="6" amplifier="255">resistance</effect>
    </kit>
    <kit id="blue-kit" parents="spawn-kit">
        <chestplate unbreakable="true" color="334CB2" material="leather chestplate"/>
        <boots unbreakable="true" color="334CB2" material="leather boots"/>
    </kit>
    <kit id="red-kit" parents="spawn-kit">
        <chestplate unbreakable="true" color="993333" material="leather chestplate"/>
        <boots unbreakable="true" color="993333" material="leather boots"/>
    </kit>
</kits>
<spawns>
    <default yaw="-90">
        <region>
            <cuboid min="-586,67,22" max="-582,67,27"/>
        </region>
    </default>
    <spawn team="blue" kit="blue-kit" yaw="0">
        <regions>
            <cuboid min="-507,11,-57" max="-506,11,-54"/>
            <cuboid min="-508,11,-56" max="-505,11,-55"/>
        </regions>
    </spawn>
    <spawn team="red" kit="red-kit" yaw="180">
        <regions>
            <cuboid min="-507,11,103" max="-506,11,106"/>
            <cuboid min="-508,11,104" max="-505,11,105"/>
        </regions>
    </spawn>
</spawns>
<wools>
    <wool team="blue" color="cyan" craftable="false" location="-557.5,15,133.5">
        <monument>
            <block>-511.5,12,-55.5</block>
        </monument>
    </wool>
    <wool team="blue" color="purple" craftable="false" location="-455.5,15,133.5">
        <monument>
            <block>-501.5,12,-55.5</block>
        </monument>
    </wool>
    <wool team="red" color="orange" craftable="false" location="-455.5,15,-84.5">
        <monument>
            <block>-501.5,12,104.5</block>
        </monument>
    </wool>
    <wool team="red" color="yellow" craftable="false" location="-557.5,15,-84.5">
        <monument>
            <block>-511.5,12,104.5</block>
        </monument>
    </wool>
</wools>
<filters>
    <not id="no-void">
        <void/>
    </not>
    <not id="deny-blue-wool-room">
        <any>
            <team id="only-blue">blue</team>
            <material>chest</material>
        </any>
    </not>
    <not id="deny-red-wool-room">
        <any>
            <team id="only-red">red</team>
            <material>chest</material>
        </any>
    </not>
    <material id="only-iron">iron block</material>
</filters>
<regions>
    <union id="spawns">
        <rectangle id="blue-spawn" min="-525,-69" max="-488,-36"/>
        <rectangle id="red-spawn" min="-525,85" max="-488,118"/>
    </union>
    <union id="wool-rooms">
        <union id="blue-wool-rooms"> <!-- Blue defends these -->
            <rectangle id="orange-woolroom" min="-463,-90" max="-448,-74"/>
            <rectangle id="yellow-woolroom" min="-565,-90" max="-550,-74"/>
        </union>
        <union id="red-wool-rooms"> <!-- Red defends these -->
            <rectangle id="cyan-wool-room" min="-565,123" max="-550,139"/>
            <rectangle id="purple-wool-room" min="-463,123" max="-448,139"/>
        </union>
    </union>
    <union id="iron-regen">
        <cuboid min="-512,9,109" max="-501,16,116"/> <!-- Red's Iron -->
        <cuboid min="-512,9,-67" max="-501,16,-60"/> <!-- Blue's Iron -->
    </union>
    <apply enter="only-blue" region="blue-spawn" message="You may not enter the enemy team's spawn area!"/>
    <apply enter="only-red" region="red-spawn" message="You may not enter the enemy team's spawn area!"/>
    <apply enter="only-blue" region="red-wool-rooms" message="You may not enter your own wool room!"/>
    <apply enter="only-red" region="blue-wool-rooms" message="You may not enter your own wool room!"/>
    <apply block="only-iron" region="spawns" message="You may not edit the spawn area!"/>
    <apply block="deny-blue-wool-room" region="blue-wool-rooms"/>
    <apply block="deny-red-wool-room" region="red-wool-rooms"/>
    <apply block-place="no-void" message="You may not edit the void here!"/>
</regions>
<renewables>
    <renewable rate="2" grow="false" particles="true" sound="true" avoid-entites="true" region="iron-regen" renew-filters="only-iron"/>
</renewables>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
    <tool>iron pickaxe</tool>
    <tool>iron spade</tool>
    <tool>iron axe</tool>
    <tool>arrow</tool>
</toolrepair>
<itemremove>
    <item>wood</item>
    <item>glass</item>
    <item>golden carrot</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>leather boots</item>
    <item>string</item>
    <item>redstone</item>
    <item>seeds</item>
    <item>sapling</item>
</itemremove>
<itemkeep>
    <item>golden apple</item>
</itemkeep>
<kill-reward>
    <item material="golden apple"/>
    <item amount="16" damage="1" material="wood"/>
</kill-reward>
<maxbuildheight>32</maxbuildheight>
</map>
