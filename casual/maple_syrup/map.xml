<map proto="1.4.0" game="King of the Flag">
<name>Maple Syrup</name>
<version>1.0.5</version>
<objective>Control the flag for 200 seconds to win!</objective>
<authors>
    <author uuid="0c44ca5a-6a42-49b7-81f2-58dc6d2ae3e9"/> <!-- Xerocoles -->
    <author uuid="3a64dcf4-5d71-4664-80bf-4e5c54e41b86"/> <!-- Zaquez -->
</authors>
<contributors>
    <contributor uuid="621b2aa8-4e5f-4ed8-bd36-0ae2f8952a06"/> <!-- Strangey -->
</contributors>
<teams>
    <team id="blue" color="blue" max="20">Blue</team>
    <team id="red" color="dark red" max="20">Red</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" unbreakable="true" material="bow"/>
        <item slot="2" material="golden apple"/>
        <item slot="8" amount="32" material="arrow"/>
        <leggings unbreakable="true" material="chainmail leggings"/>
        <boots unbreakable="true" material="iron boots">
            <enchantment level="1">protection fall</enchantment>
            <enchantment level="2">protection projectile</enchantment>
        </boots>
        <health>20</health>
        <game-mode>adventure</game-mode>
    </kit>
    <kit id="red-kit" parents="spawn-kit">
        <helmet color="993333" unbreakable="true" material="leather helmet"/>
        <chestplate color="993333" unbreakable="true" material="leather chestplate"/>
    </kit>
    <kit id="blue-kit" parents="spawn-kit">
        <helmet color="334CB2" unbreakable="true" material="leather helmet"/>
        <chestplate color="334CB2" unbreakable="true" material="leather chestplate"/>
    </kit>
    <kit id="flag-kit" force="true">
        <effect duration="oo" amplifier="-3">health boost</effect>
        <effect duration="3" amplifier="2">absorption</effect>
    </kit>
    <kit id="reset-health" force="true">
        <effect duration="1" amplifier="0">health boost</effect>
        <effect duration="1" amplifier="10">regeneration</effect>
    </kit>
</kits>
<spawns>
    <spawn team="red" kit="red-kit" yaw="90" filter="no-flag">
        <region>
            <point>365.5,47,-85.5</point>
        </region>
    </spawn>
    <spawn team="blue" kit="blue-kit" yaw="-90" filter="no-flag">
        <region>
            <point>189.5,47,-85.5</point>
        </region>
    </spawn>
    <default yaw="180">
        <region>
            <cuboid min="276,35,-29" max="279,35,-32"/>
        </region>
    </default>
</spawns>
<respawn spectate="true">
    <message>
        { translate: "death.respawn.confirmed.waiting.flagDropped" }
    </message>
</respawn>
<filters>
    <not id="no-flag">
        <same-team>
            <carrying-flag>flag</carrying-flag>
        </same-team>
    </not>
    <not id="flag-dam">
        <carrying-flag>flag</carrying-flag>
    </not>
</filters>
<regions>
    <apply use="never" block="never" region="everywhere"/>
    <apply enter="flag-dam" message="You may not climb the dam while carrying the flag!">
        <region>
            <union>
                <cuboid min="351,16,-56" max="356,40,-115"/>
                <cuboid min="204,16,-56" max="199,40,-115"/>
            </union>
        </region>
    </apply>
</regions>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>chainmail leggings</item>
    <item>iron boots</item>
    <item>leather chestplate</item>
</itemremove>
<itemkeep>
    <item>arrow</item>
    <item>golden apple</item>
</itemkeep>
<score>
    <limit>200</limit>
    <kills>0</kills>
    <deaths>0</deaths>
</score>
<kill-reward>
    <item amount="8" material="arrow"/>
    <item material="golden apple"/>
</kill-reward>
<flags>
    <flag id="flag"
          name="Flag"
          color="white"
          shared="true"
          post="centre-post"
          points-rate="1"
          pickup-kit="flag-kit"
          drop-kit="reset-health"
          flag-proximity-metric="closest player"
          show-respawn-on-pickup="true">
        <post id="centre-post" return-time="0s" respawn-time="20s" name="Centre Platform">277.5,21,-85.5</post>
        <post id="north-post" return-time="0s" respawn-time="20s" name="North Platform">277.5,27,-119.5</post>
        <post id="south-post" return-time="0s" respawn-time="20s" name="South Platform">277.5,27,-51.5</post>
    </flag>
</flags>
<hunger>
    <depletion>off</depletion>
</hunger>
<timelock>on</timelock>
</map>
