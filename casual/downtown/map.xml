</contributors>
<broadcasts>
    <tip after="10s" every="2m">Center hill is worth more points than any other hill!</tip>
</broadcasts>
<teams>
    <team id="blue" color="blue" max="18">Blue</team>
    <team id="red" color="dark red" max="18">Red</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" unbreakable="true" material="bow"/>
        <item slot="2" material="golden apple"/>
        <item slot="8" amount="24" material="arrow"/>
        <leggings unbreakable="true" material="chainmail leggings">
            <enchantment level="3">projectile_protection</enchantment>
        </leggings>
        <boots unbreakable="true" material="iron boots">
            <enchantment>feather_falling</enchantment>
        </boots>
        <effect duration="5" amplifier="4">heal</effect>
        <effect duration="5" amplifier="4">damage resistance</effect>
        <game-mode>adventure</game-mode>
    </kit>
    <kit id="blue-kit" parents="spawn-kit">
        <helmet color="334CB2" unbreakable="true" material="leather helmet"/>
        <chestplate color="334CB2" unbreakable="true" material="leather chestplate"/>
    </kit>
    <kit id="red-kit" parents="spawn-kit">
        <helmet color="993333" unbreakable="true" material="leather helmet"/>
        <chestplate color="993333" unbreakable="true" material="leather chestplate"/>
    </kit>
</kits>
<spawns>
    <default yaw="180">
        <region>
            <point>0.5,60,75.5</point>
        </region>
    </default>
    <spawn team="blue" kit="blue-kit" yaw="180">
        <region>
            <cylinder base="-45,7,6" radius="2" height="1"/>
        </region>
    </spawn>
    <spawn team="red" kit="red-kit" yaw="0">
        <region>
            <cylinder base="45,7,-6" radius="2" height="1"/>
        </region>
    </spawn>
</spawns>
<regions>
