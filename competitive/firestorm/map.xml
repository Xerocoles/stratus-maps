<spawns>
    <default kit="night-vision" yaw="90">
        <region>
            <cuboid min="291.5,28,-95" max="291.5,28,-96"/>
        </region>
    </default>
    <spawn team="red" kit="night-vision" yaw="-90">
        <region>
            <block>224.5,34.5,-95.5</block>
        </region>
    </spawn>
    <spawn team="blue" kit="night-vision" yaw="90">
        <region>
            <block>312.5,34.5,-95.5</block>
        </region>
    </spawn>
</spawns>
<spawners>
    <spawner id="gapple-spawner" spawn-region="gapple-spawn-drop" player-region="gapple-spawn-activation" max-entities="9999" delay="7s">
        <item amount="1" material="golden apple"/>
    </spawner>
    <spawner id="red-arrow-spawner" spawn-region="red-arrow-spawn-drop" player-region="red-arrow-spawn-activation" max-entities="9999" delay="2s">
        <item amount="1" material="arrow"/>
    </spawner>
