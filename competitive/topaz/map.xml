<map proto="1.4.2">
<name>Topaz</name>
<version>1.1.1</version>
<objective>Reach 750 points before the opposing team!</objective>
<authors>
    <author uuid="0c44ca5a-6a42-49b7-81f2-58dc6d2ae3e9"/> <!-- Xerocoles -->
</authors>
<teams>
    <team id="red" color="dark red" max="5" max-overfill="5">Red</team>
    <team id="blue" color="blue" max="5" max-overfill="5">Blue</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" unbreakable="true" material="bow"/>
        <item slot="2" material="golden apple"/>
        <item slot="8" amount="12" material="arrow"/>
        <helmet unbreakable="true" team-color="true" material="leather helmet"/>
        <chestplate unbreakable="true" team-color="true" material="leather chestplate"/>
        <leggings unbreakable="true" material="chainmail leggings">
            <enchantment level="4">projectile_protection</enchantment>
        </leggings>
        <boots unbreakable="true" material="iron boots"/>
        <effect duration="2" amplifier="255">resistance</effect>
    </kit>
</kits>
<spawns>
    <default>
        <region yaw="-45">
            <cuboid min="-134.5,44.25,-27.5" max="-132.5,44.25,-25.5"/>
        </region>
    </default>
    <spawn team="blue" kit="spawn-kit">
        <region yaw="-90">
            <point>-140.5,9,21.5</point>
        </region>
    </spawn>
    <spawn team="red" kit="spawn-kit">
        <region yaw="0">
            <point>-85.5,9,-33.5</point>
        </region>
    </spawn>
</spawns>
<filters>
    <deny id="deny-use">
        <any>
            <material>workbench</material>
            <material>note block</material>
        </any>
    </deny>
</filters>
<regions>
    <apply use="deny-use" block="never"/>
</regions>
<king>
    <hills required="false" capture-time="5s" points="1" time-multiplier="0" show-progress="true" neutral-state="true" incremental="true" permanent="false">
        <hill name="Top">
            <capture>
                <cuboid min="-116,13,-9" max="-109,16,-2"/>
            </capture>
            <progress>
                <cuboid min="-116,13,-9" max="-109,16,-2"/>
            </progress>
            <captured>
                <cuboid min="-116,13,-9" max="-109,16,-2"/>
            </captured>
        </hill>
        <hill name="Mid">
            <capture>
                <cuboid min="-101,6,6" max="-94,9,13"/>
            </capture>
            <progress>
                <cuboid min="-101,6,6" max="-94,9,13"/>
            </progress>
            <captured>
                <cuboid min="-101,6,6" max="-94,9,13"/>
            </captured>
        </hill>
        <hill name="Cross">
            <capture>
                <cuboid min="-85,11,22" max="-78,14,29"/>
            </capture>
            <progress>
                <cuboid min="-85,11,22" max="-78,14,29"/>
            </progress>
            <captured>
                <cuboid min="-85,11,22" max="-78,14,29"/>
            </captured>
        </hill>
    </hills>
</king>
<score>
    <limit>750</limit>
</score>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>iron boots</item>
</itemremove>
<itemkeep>
    <item>golden apple</item>
    <item>arrow</item>
</itemkeep>
<kill-reward>
    <item material="golden apple"/>
    <item amount="5" material="arrow"/>
</kill-reward>
<respawn delay="4s" auto="true" blackout="true"/>
<hunger>
    <depletion>off</depletion>
</hunger>
</map>
