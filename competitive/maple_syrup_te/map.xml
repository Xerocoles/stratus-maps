<map proto="1.4.0">
<game>King of the Flag</game>
<name>Maple Syrup</name>
<version>2.0.2</version>
<edition>tournament</edition>
<objective>Control the flag for 200 seconds to win!</objective>
<authors>
    <author uuid="0c44ca5a-6a42-49b7-81f2-58dc6d2ae3e9"/> <!-- Xerocoles -->
    <author uuid="3a64dcf4-5d71-4664-80bf-4e5c54e41b86"/> <!-- Zaquez -->
</authors>
<contributors>
    <contributor uuid="621b2aa8-4e5f-4ed8-bd36-0ae2f8952a06"/> <!-- Strangey -->
</contributors>
<teams>
    <team id="blue" color="blue" max="7" max-overfill="7">Blue</team>
    <team id="red" color="dark red" max="7" max-overfill="7">Red</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="2" material="golden apple"/>
        <leggings unbreakable="true" material="chainmail leggings">
            <enchantment level="3">projectile_protection</enchantment>
        </leggings>
        <boots unbreakable="true" material="iron boots">
            <enchantment>feather_falling</enchantment>
        </boots>
        <health>20</health>
        <game-mode>adventure</game-mode>
    </kit>
    <kit id="outside-spawn">
        <item slot="1" unbreakable="true" material="bow"/>
        <item slot="8" amount="32" material="arrow"/>
        <health>20</health>
        <game-mode>adventure</game-mode>
    </kit>
    <kit id="blue-kit" parents="outside-spawn">
        <helmet color="334CB2" unbreakable="true" material="leather helmet"/>
        <chestplate color="334CB2" unbreakable="true" material="leather chestplate"/>
    </kit>
    <kit id="red-kit" parents="outside-spawn">
        <helmet color="993333" unbreakable="true" material="leather helmet"/>
        <chestplate color="993333" unbreakable="true" material="leather chestplate"/>
    </kit>
    <kit id="flag-kit" force="true">
        <effect amplifier="-3">health boost</effect>
        <effect duration="3" amplifier="2">absorption</effect>
    </kit>
    <kit id="reset-health" force="true">
        <effect duration="1" amplifier="0">health boost</effect>
        <effect duration="1" amplifier="10">regeneration</effect>
    </kit>
</kits>
<spawns>
    <default yaw="180">
        <region>
            <cuboid min="276,35,-29" max="279,35,-32"/>
        </region>
    </default>
    <spawn team="blue" kit="spawn-kit" yaw="-90">
        <region>
            <point>189.5,49,-85.5</point>
        </region>
    </spawn>
    <spawn team="red" kit="spawn-kit" yaw="90">
        <region>
            <point>365.5,49,-85.5</point>
        </region>
    </spawn>
</spawns>
<filters>
    <all id="has-flag">
        <any>
            <carrying-flag>flag</carrying-flag>
            <not>
                <same-team>
                    <carrying-flag>flag</carrying-flag>
                </same-team>
            </not>
        </any>
    </all>
    <not id="flag-dam">
        <carrying-flag>flag</carrying-flag>
    </not>
</filters>
<regions>
    <union id="spawn-exits">
        <cuboid min="354,44,-120" max="349,53,-51"/>
        <cuboid min="201,44,-51" max="206,53,-120"/>
    </union>
    <union id="dam-area">
        <cuboid min="351,18,-56" max="356,40,-115"/>
        <cuboid min="204,18,-56" max="199,40,-115"/>
    </union>
    <union id="kit-apply">
        <cuboid id="blue-kit-apply" min="201,46,-51" max="206,55,-120"/>
        <cuboid id="red-kit-apply" min="354,46,-120" max="349,55,-51"/>
    </union>
    <apply enter="has-flag" message="You may not leave spawn while your teammate has the flag!" region="spawn-exits"/>
    <apply kit="blue-kit" region="blue-kit-apply"/>
    <apply kit="red-kit" region="red-kit-apply"/>
    <apply enter="flag-dam" message="You may not climb the dam while carrying the flag!" region="dam-area"/>
    <apply block="never"/>
</regions>
<flags>
    <flag id="flag"
          name="Flag"
          color="white"
          shared="true"
          post="centre-post"
          points-rate="1"
          pickup-kit="flag-kit"
          drop-kit="reset-health"
          flag-proximity-metric="closest player"
          show-respawn-on-pickup="true">
        <post id="centre-post" return-time="0s" respawn-time="20s" name="Centre Platform">277.5,19,-85.5</post>
        <post id="north-post" return-time="0s" respawn-time="20s" name="North Platform">277.5,27,-119.5</post>
        <post id="south-post" return-time="0s" respawn-time="20s" name="South Platform">277.5,27,-51.5</post>
    </flag>
</flags>
<score>
    <limit>200</limit>
</score>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>iron boots</item>
</itemremove>
<itemkeep>
    <item>golden apple</item>
    <item>arrow</item>
</itemkeep>
<kill-reward>
    <item material="golden apple"/>
    <item amount="16" material="arrow"/>
</kill-reward>
<respawn auto="true" blackout="true" delay="5s"/>
<hunger>
    <depletion>off</depletion>
</hunger>
</map>
